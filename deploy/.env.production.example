# =============================================================================
# sunyuDX-flow Production Environment Variables
# Copy this file to .env.production and update values
# =============================================================================

# Application
NODE_ENV=production
APP_NAME=sunyuDX-flow
APP_VERSION=1.0.0

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Frontend URL (for CORS)
FRONTEND_URL=https://sunyutech-dx.com
ALLOWED_ORIGINS=https://sunyutech-dx.com,https://www.sunyutech-dx.com

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sunyutech_dx_prod
DB_USER=sunyudx_prod
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123456789
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# JWT Authentication
JWT_SECRET=CHANGE_THIS_SUPER_SECRET_KEY_MIN_64_CHARS_LONG_FOR_PRODUCTION_USE
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=7

# Redis (Session/Cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_DB=0

# File Upload
MAX_FILE_SIZE=52428800
UPLOAD_DIR=/opt/sunyudx-flow/uploads
ALLOWED_EXTENSIONS=xlsx,xls,pdf,jpg,jpeg,png

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@sunyutech-dx.com
SMTP_PASSWORD=CHANGE_THIS_SMTP_PASSWORD
SMTP_FROM_NAME=sunyuTECH-DX
SMTP_FROM_EMAIL=noreply@sunyutech-dx.com

# Logging
LOG_LEVEL=INFO
LOG_DIR=/var/log/sunyudx
LOG_MAX_SIZE=100M
LOG_BACKUP_COUNT=5

# Security
CORS_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=false

# External Services (Optional)
CLAUDE_API_KEY=
LINE_WORKS_API_KEY=
SLACK_WEBHOOK_URL=

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=

# Feature Flags
FEATURE_PDF_EXPORT=true
FEATURE_EXCEL_EXPORT=true
FEATURE_APPROVAL_WORKFLOW=true
FEATURE_AI_ASSISTANT=false
